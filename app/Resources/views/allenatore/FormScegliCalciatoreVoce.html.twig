{% extends "allenatore/template.html.twig" %}
{% block contenuto %}
    <h1>Scegli calciatore per fissare un colloquio a voce</h1>

    <br>

    <div>
        <form action="/yourteam/web/app_dev.php/comunicazione/allenatore/ottieniMessaggioVoceView" method="post">
            <select name="calciatore_destinatario">
                {% for calciatore in calciatori %}
                    <option>
                        {{ calciatore }}
                    </option>
                {% endfor %}
            </select>

            <input type="submit" value="Invia"/>
        </form>


    </div>

{% endblock %}