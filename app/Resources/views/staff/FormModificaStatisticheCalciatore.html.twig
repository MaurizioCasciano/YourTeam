{% block contenuto %}
    {% set statistiche = calciatore.getStatistiche() %}
    {#{{ dump(calciatore) }}#}
    {#{{ dump(statistiche) }}#}
    {#{{ dump(partita) }}#}

    <h1>Modifica Statistiche {{ calciatore.getNome() |capitalize }}&nbsp;{{ calciatore.getCognome() | capitalize }}</h1>

    <form class="modifica_statistiche_calciatore" action="{{ path('ModificheStatisticheCalciatore') }}" method="post">
        <input type="hidden" name="nome_partita" value="{{ partita.getNome() }}">
        <input type="hidden" name="data_partita" value="{{ partita.getData() }}">
        <input type="hidden" name="calciatore" value="{{ calciatore.getContratto() }}">

        <div>
            <label for="tiri_totali">Tiri Totali</label>
            <input id="tiri_totali" type="number" min="0" name="tiri_totali" value="{{ statistiche.getTiriTotali() }}">
        </div>

        <div>
            <label for="tiri_porta">Tiri in Porta</label>
            <input id="tiri_porta" type="number" min="0" name="tiri_porta"
                   value="{{ statistiche.getTiriPorta() }}"><br/>
        </div>

        <div>
            <label for="falli_fatti">Falli Fatti</label>
            <input id="falli_fatti" type="number" min="0" name="falli_fatti"
                   value="{{ statistiche.getFalliFatti() }}"><br/>
        </div>

        <div>
            <label for="falli_subiti">Falli Subiti</label>
            <input id="falli_subiti" type="number" min="0" name="falli_subiti"
                   value="{{ statistiche.getFalliSubiti() }}"><br/>
        </div>

        <div>
            <label for="percentuale_passagii_riusciti">Percentuale Passaggi Riusciti</label>
            <input id="percentuale_passagii_riusciti" type="number" min="0" max="100"
                   name="percentuale_passagii_riusciti"
                   value="{{ statistiche.getPercentualePassaggiRiusciti() }}"><br/>
        </div>


        <input id="gol_fatti" type="hidden" name="gol_fatti" value="{{ statistiche.golFatti }}"><br/>

        <input id="gol_subiti" type="hidden" name="gol_subiti" value="{{ statistiche.golSubiti }}"><br/>

        <input id="assist" type="hidden" name="assist" value="{{ statistiche.assist }}"><br/>

        <input id="ammonizioni" type="hidden" name="ammonizioni"
               value="{{ statistiche.ammonizioni }}"><br/>

        <input id="espulsioni" type="hidden" name="espulsioni" value="{{ statistiche.espulsioni }}"><br/>

        <div>
            <input type="submit" value="Salva">
        </div>
    </form>
{% endblock %}