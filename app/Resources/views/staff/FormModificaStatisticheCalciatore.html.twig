{% extends 'staff/template.html.twig' %}
{% block contenuto %}
    <h1>Form modifica statistiche calciatore</h1>
    <h2>{{ app.session.get("calciatore") }}</h2>
    <h3>{{ app.session.get("nome_partita") }}</h3>
    <h4>{{ app.session.get("data_partita") }}</h4>

    <form action="/statistiche/staff/calciatore/edit/submit" method="post">
        <div>
            <label for="tiri_totali">Tiri Totali</label>
            <input id="tiri_totali" type="number" name="tiri_totali" value="{{ statistiche_calciatore.tiriTotali }}">
        </div>

        <div>
            <label for="tiri_porta">Tiri in Porta</label>
            <input id="tiri_porta" type="number" name="tiri_porta" value="{{ statistiche_calciatore.tiriPorta }}"><br/>
        </div>

        <div>
            <label for="falli_fatti">Falli Fatti</label>
            <input id="falli_fatti" type="number" name="falli_fatti"
                   value="{{ statistiche_calciatore.falliFatti }}"><br/>
        </div>

        <div>
            <label for="falli_subiti">Falli Subiti</label>
            <input id="falli_subiti" type="number" name="falli_subiti"
                   value="{{ statistiche_calciatore.falliSubiti }}"><br/>
        </div>

        <div>
            <label for="percentuale_passagii_riusciti">Percentuale Passaggi Riusciti</label>
            <input id="percentuale_passagii_riusciti" type="number" name="percentuale_passagii_riusciti"
                   value="{{ statistiche_calciatore.percentualePassaggiRiusciti }}"><br/>
        </div>

        <div>
            <label for="gol_fatti">Gol Fatti</label>
            <input id="gol_fatti" type="number" name="gol_fatti" value="{{ statistiche_calciatore.golFatti }}"><br/>
        </div>

        <div>
            <label for="gol_subiti">Gol Subiti</label>
            <input id="gol_subiti" type="number" name="gol_subiti" value="{{ statistiche_calciatore.golSubiti }}"><br/>
        </div>

        <div>
            <label for="assist">Assist</label>
            <input id="assist" type="number" name="assist" value="{{ statistiche_calciatore.assist }}"><br/>
        </div>

        <div>
            <label for="ammonizioni">Ammonizioni</label>
            <input id="ammonizioni" type="number" name="ammonizioni"
                   value="{{ statistiche_calciatore.ammonizioni }}"><br/>
        </div>

        <div>
            <label for="espulsioni">Espulsioni</label>
            <input id="espulsioni" type="number" name="espulsioni" value="{{ statistiche_calciatore.espulsioni }}"><br/>
        </div>

        <div>
            <input type="submit" value="Salva">
        </div>
    </form>
{% endblock %}