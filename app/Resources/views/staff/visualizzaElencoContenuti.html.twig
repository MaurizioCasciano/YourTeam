{% extends 'staff/template.html.twig' %}

{% block contenuto %}
    <h1>Foto</h1>
    <br>
    {% if immagini is empty %}
    <div class="alert alert-danger">
        <strong>Attenzione</strong> Siamo spiacenti ma al momento non sono presenti immagini della tua squadra
    </div>
    {% else %}
        <div class="container-fluid" class="col-md-10 col-sm-10">

            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 600px; margin: 0 auto">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    {% set counter = 1%}
                    {% for immagine in immagini %}
                        {% if loop.first== false %}
                            <li data-target="#myCarousel" data-slide-to="{{ counter}}" ></li>
                            {% set counter = counter + 1 %}
                        {% endif %}
                    {% endfor %}
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                            <a href="/yourteam/web/app_dev.php/contenuti/staff/visualizzaContenutoView/{{ immagini[0].getId() }}"> <img style="max-width: 80%;max-height: 80%;margin: 0 auto" src="{{ asset("ImmaginiApp/contenuti/") }}{{ immagini[0].getURL() }}" ></a>
                    </div>
                    {% for immagine in immagini %}
                        {% if loop.first== false %}
                            <div class="item">
                                <a href="/yourteam/web/app_dev.php/contenuti/staff/visualizzaContenutoView/{{ immagine.getId() }}"> <img style="max-width: 80%;max-height: 80%;margin: 0 auto" src="{{ asset("ImmaginiApp/contenuti/") }}{{ immagine.getURL() }}" ></a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    {% endif %}
    <br><br>
    <h1>Video</h1>
    <br>
    {% if video is empty %}
        <div class="alert alert-danger">
            <strong>Attenzione</strong> Siamo spiacenti ma al momento non sono presenti video della tua squadra
        </div>
    {% else %}
    <div class="container-fluid">

        <div id="myCarousel2" class="carousel slide" data-ride="carousel" style="width: 400px; margin: 0 auto" >
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel2" data-slide-to="0" class="active"></li>
                {% set counter = 1%}
                {% for vid in video %}
                    {% if loop.first== false %}
                        <li data-target="#myCarousel2" data-slide-to="{{ counter }}" ></li>
                        {% set counter = counter + 1 %}
                    {% endif %}
                {% endfor %}
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <a href="/yourteam/web/app_dev.php/contenuti/staff/visualizzaContenutoView/{{ video[0].getId() }}">
                        <video style="width:400px; height:240px; margin: 0 auto" controls>
                            <source src="{{ asset("ImmaginiApp/contenuti/Video/") }}{{ video[0].getURL() }}"   type="video/mp4">
                        </video>
                    </a>
                </div>
                {% for vid in video %}
                    {% if loop.first== false %}
                        <div class="item">
                            <a href="/yourteam/web/app_dev.php/contenuti/staff/visualizzaContenutoView/{{ vid.getId() }}">
                                <video width="320" height="240" controls>
                                    <source src="{{ asset("ImmaginiApp/contenuti/Video/") }}{{ vid.getURL() }}"  type="video/mp4" >
                                </video>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <a class="left carousel-control" href="#myCarousel2" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel2" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    {% endif %}
