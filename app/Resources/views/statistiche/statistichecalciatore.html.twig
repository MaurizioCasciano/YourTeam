<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <style>
            h1 {
                text-align: center;
            }

            th{
                background-color: #0088CC;
            }

            table, th, td {
                margin: 0 auto;
                text-align: center;
                border: 1px solid black;
                border-collapse: collapse;
            }
        </style>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    <h1>StatisticheCalciatore complessive {{ statistiche_calciatore.usernameCalciatore }}</h1>

    <table>
        <tr>
            <th>Statistica</th>
            <th>Valore</th>
        </tr>

        <tr>
            <td>Tiri Totali</td>
            <td>{{ statistiche_calciatore.tiriTotali }}</td>
        </tr>

        <tr>
            <td>Tiri in Porta</td>
            <td>{{ statistiche_calciatore.tiriPorta }}</td>
        </tr>

        <tr>
            <td>Falli Fatti</td>
            <td>{{ statistiche_calciatore.falliFatti }}</td>
        </tr>

        <tr>
            <td>Falli Subiti</td>
            <td>{{ statistiche_calciatore.falliSubiti }}</td>
        </tr>

        <tr>
            <td>% Passaggi Riusciti</td>
            <td>{{ statistiche_calciatore.percentualePassaggiRiusciti }}</td>
        </tr>

        <tr>
            <td>Gol Fatti</td>
            <td>{{ statistiche_calciatore.golFatti }}</td>
        </tr>

        <tr>
            <td>Gol Subiti</td>
            <td>{{ statistiche_calciatore.golSubiti }}</td>
        </tr>

        <tr>
            <td>Assist</td>
            <td>{{ statistiche_calciatore.assist }}</td>
        </tr>

        <tr>
            <td>Ammonizioni</td>
            <td>{{ statistiche_calciatore.ammonizioni }}</td>
        </tr>

        <tr>
            <td>Espulsioni</td>
            <td>{{ statistiche_calciatore.espulsioni }}</td>
        </tr>
    </table>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
