<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <style>
            h1 {
                text-align: center;
            }
        </style>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    <h1>Form inserisci statistiche calciatore</h1>

    <form action="/statistiche/staff/calciatore/insert/submit" method="post">
        <label for="calciatore">Calciatore</label>
        <input id="calciatore" type="text" name="calciatore"><br/>

        <label for="nome_partita">Nome Partita</label>
        <input id="nome_partita" type="text" name="nome_partita"><br/>

        <label for="data_partita">Data Partita</label>
        <input id="data_partita" type="datetime" name="data_partita"><br/>

        <label for="tiri_totali">Tiri Totali</label>
        <input id="tiri_totali" type="number" name="tiri_totali"><br/>

        <label for="tiri_porta">Tiri in Porta</label>
        <input id="tiri_porta" type="number" name="tiri_porta"><br/>

        <label for="falli_fatti">Falli Fatti</label>
        <input id="falli_fatti" type="number" name="falli_fatti"><br/>

        <label for="falli_subiti">Falli Subiti</label>
        <input id="falli_subiti" type="number" name="falli_subiti"><br/>

        <label for="percentuale_passagii_riusciti">Percentuale Passaggi Riusciti</label>
        <input id="percentuale_passagii_riusciti" type="number" name="percentuale_passagii_riusciti"><br/>

        <label for="gol_fatti">Gol Fatti</label>
        <input id="gol_fatti" type="number" name="gol_fatti"><br/>

        <label for="gol_subiti">Gol Subiti</label>
        <input id="gol_subiti" type="number" name="gol_subiti"><br/>

        <label for="assist">Assist</label>
        <input id="assist" type="number" name="assist"><br/>

        <label for="ammonizioni">Ammonizioni</label>
        <input id="ammonizioni" type="number" name="ammonizioni"><br/>

        <label for="espulsioni">Espulsioni</label>
        <input id="espulsioni" type="number" name="espulsioni"><br/>

        <input type="submit" value="Salva">
    </form>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
