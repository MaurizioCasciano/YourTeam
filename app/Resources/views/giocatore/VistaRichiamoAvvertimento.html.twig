{% extends 'giocatore/template.html.twig' %}

{% block contenuto %}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-ban-circle"></span> Richiami Avvertimento
                    </div>
                    <ul id="chat" class="list-group">
                        {% for messaggio in messaggi %}
                            <li class="list-group-item">{{ messaggio.getTesto() }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}