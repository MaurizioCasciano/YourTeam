                        <div class="form-group">

                            <label class="col-sm-2 control-label">Nome:</p></label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getNome() }} </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">   Cognome:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getCognome() }}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getEmail() }}</p>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label">username o  numero contratto:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getContratto() }}</p>
                            </div>
                        </div>



                        <div class="form-group">
                            <label  class="col-sm-2 control-label">password</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> *********</p>
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-sm-2 control-label text-center">Data di nascita</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getDataDiNascita() }}</p>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label text-center">Domicilio</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getDomicilio() }}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Indirizzo</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getIndirizzo() }}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Provincia</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> {{ giocatore.getProvincia() }}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Numero</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">{{ giocatore.getTelefono() }}</p>
                            </div>
                        </div>
                    </form>

                    <button type="button" class="btn btn-info"> Elimina </button> &nbsp &nbsp
                    <button type="button" class="btn btn-info"> Modifica </button>
            </div>
        </div>
    </div>
