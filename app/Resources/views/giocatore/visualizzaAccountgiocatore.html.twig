{% extends 'giocatore/template.html.twig' %}
{% block contenuto %}
    <div class="row">

        <div class="profile">

            <div class="avatar"> <center>

                    <img src="{{ asset("ImmaginiApp/account/") }}{{ giocatore.getImmagine() }}" alt="Circle Image" class="img-circle img-responsive img-raised" width="160px" height="160px" >
