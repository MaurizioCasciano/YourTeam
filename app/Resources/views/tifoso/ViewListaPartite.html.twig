{% extends 'tifoso/template.html.twig' %}
{% block head %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .panel-title button {
            width: 100%;
        }
    </style>
{% endblock %}

{% block contenuto %}
    <div id="accordion" class="panel-group" role="tablist">
        {% for partita in partite %}
            <div class="panel panel-default">
                <div class="panel-heading" role="tab">
                    <h4 class="panel-title">
                        <button class="collapsed" data-toggle="collapse" data-parent="#accordion"
                                data-target="#{{ loop.index }}">
                            <span class="pull-left">{{ partita.getNome() }}</span><span
                                    class="pull-right">{{ partita.getData() | date('Y-m-d H:i:s') }}</span>
                        </button>
                    </h4>
                </div>

                <div id="{{ loop.index }}" class="panel-collapse collapse" role="tabpanel">
                    <div class="panel-body">
                        {% include ":tifoso:ViewInfoPartita.html.twig" with {"partita" : partita} only %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


    <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>

    <script src="{{ asset("partite/js/InserisciPartita.js") }}"></script>
{% endblock %}